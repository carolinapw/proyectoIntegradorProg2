<!-- head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<%- include('./partials/header') %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/<%= infoUsuario.fotoPerfil %>"alt="foto de perfil" class="foto-perfil">-->
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= infoUsuario.usuario %> 
						<a href="/users/profile/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="/users/profile/">SEGUIR</a>
				</div>
				<div>
					<p class="texto"><%= infoUsuario.email %></p>
					<ul class="texto">
						<li><%= infoUsuario.product.length %> productos</li>
						<li><%= infoUsuario.product.length %> seguidores</li>
						<li><%= infoUsuario.comment.length %> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->

			<% for (let i=0; i < infoUsuario.product.length; i++) { %> <!-- infoUsuario hace referencia al método perfil del usersController y product a la asociación de ese método-->
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/<%= infoUsuario.product[i].id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= infoUsuario.product[i].imagen %>" alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2><%= infoUsuario.product[i].nombreProducto %></h2>
							<p><%= infoUsuario.product[i].descripcion %></p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>