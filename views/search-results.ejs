<!-- head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/header') %>

	<!-- Novedades -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Novedades</h2>
					</div>
					<!-- Show the "ultimos" products -->
					<% if (productsDb.length>0) { %>
						<% for(let i=0; i<productsDb.length; i++) { %>
							<div class="col-12 col-sm-6 col-lg-3">
								<section class="product-box">
									<a href="/products/<%= productsDb[i].id %>">
										<figure class="product-box_image">
											<img src="/images/products/<%= productsDb[i].imagen %>" alt="cafetera moulinex">
										</figure>
										<article class="product-box_data">
											<h2><%= productsDb[i].nombreProducto %></h2>
											<p><%= productsDb[i].descripcion %></p>
											<p>Comentarios: 12</p>
										</article>
									</a>
								</section>
							</div>
						<% } %>
						
					<% } else {%>
					<h2>No hay resultados para su criterio de b√∫squeda</h2>
					<% } %>
		
				</div>
			</div>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>