<!-- head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/header') %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar producto</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12 formularios"> 
				<% if(locals.errores){ %>
					<p> <%= errores.message%> </p>
				<% } %>
				<form action="/products/<%= producto.id%>/edit" method ="POST">
					<div class="forms">
						<input type="file" name="imagen" value="">
					</div>
					<div class="forms">
						<input type="text" name="producto" value="<%= producto.nombreProducto%>" placeholder="Nombre del producto">
					</div>
					<div class="forms">
						<input type="text" name="descripcion" value="<%= producto.descripcion%>" placeholder="DescripciÃ³n del producto">
					</div>
					<div class="forms">
						<button class="formularios" type="submit">Editar producto</button>
					</div>
				</form>
			</h2>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>